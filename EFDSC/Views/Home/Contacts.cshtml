
@{
    ViewBag.Title = "Contacts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="width:auto;">
    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Role</th>
                    <th>Email</th>
                    <th>Telephone</th>
                    @{ }
                </tr>
            </thead>
            <tbody>
                @foreach (var contact in ViewBag.Contacts)
            {
                    <tr>
                        <td>@contact.Name</td>
                        <td>@contact.Role</td>
                        <td>@contact.Email</td>
                        <td>@contact.Telephone</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>